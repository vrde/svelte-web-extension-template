{
  "name": "Svelte Web Extension Template",
  "version": "0.0.1",
  "description": "A minimal template to build your own web extension!",
  "background": {
    "scripts": ["background/bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "default_popup/index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 2
}
